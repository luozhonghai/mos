<h1>ショッピングカート</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th colspan="1"></th>
      <th>Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= image_tag(cart.product.avatar.url(:thumb)) %></td>
        <td><%= cart.product.name %></td>
        <td><%= cart.count %></td>
        <!-- <td><%= link_to 'Show', cart %></td> -->
        <td><%= link_to '数量变更', edit_cart_path(cart) %></td>
        <td><%= link_to '削除', cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3><%= "sum: " + @cart_sum.to_s %></h3>
<h3><%= "fare: " + @cart_fare.to_s %></h3><br>

<%= link_to 'メニューに戻る', products_path %>
